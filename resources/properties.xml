<resources>

    <properties>
        <property id="sysid_prop" type="number">99999</property>
        <property id="apikey_prop" type="string">putinyourapikey</property>
        <property id="consumption_prop" type="boolean">true</property>
        <property id="extended_prop" type="boolean">false</property>
        <property id="extvalue_prop" type="number">0</property>
        <property id="extlabel_prop" type="string">v7</property>
    </properties>

    <strings>
       <string id="sysid_title">System Id</string>
       <string id="apikey_title">API key</string>
       <string id="consumption_title">Consumption</string>
       <string id="extended_title">Query data</string>
       <string id="extvalue_title">Display value</string>
       <string id="extlabel_title">Data label</string>
    </strings>

    <settings>

        <setting propertyKey="@Properties.sysid_prop" title="@Strings.sysid_title">
            <settingConfig type="numeric" />
        </setting>

        <setting propertyKey="@Properties.apikey_prop" title="@Strings.apikey_title">
            <settingConfig type="alphaNumeric" />
        </setting>

        <setting propertyKey="@Properties.consumption_prop" title="@Strings.consumption_title">
            <settingConfig type="boolean" />
        </setting>

        <group id="extendedData" title="Extended data">

            <setting propertyKey="@Properties.extended_prop" title="@Strings.extended_title">
                <settingConfig type="boolean" />
            </setting>

            <setting propertyKey="@Properties.extvalue_prop" title="Display data value">
                <settingConfig type="list">
                    <listEntry value="0">v7</listEntry>
                    <listEntry value="1">v8</listEntry>
                    <listEntry value="2">v9</listEntry>
                    <listEntry value="3">v10</listEntry>
                    <listEntry value="4">v11</listEntry>
                    <listEntry value="5">v12</listEntry>
                </settingConfig>
            </setting>

            <setting propertyKey="@Properties.extlabel_prop" title="@Strings.extlabel_title">
                <settingConfig type="alphaNumeric" />
            </setting>

        </group>

    </settings>
</resources>
